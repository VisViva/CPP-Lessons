#include <iostream>
#include <locale>

using std::cout;
using std::cin;

int main()
{
	setlocale(LC_ALL,"Russian");

	double dX(0.0), dY(0.0), dZ(0.0);
	double dVectorLength(0.0);

	cout << "\n Введите Х: ";
	cin >> dX;

	cout << "\n Введите Y: ";
	cin >> dY;

	cout << "\n Введите Z: ";
	cin >> dZ;

	cout << "\n Вы ввели следующие числа: X = " << dX << "; Y = " << dY << "; Z = " << dZ;

	dVectorLength = sqrt(dX*dX + dY*dY + dZ*dZ);

	cout << "\n Длина вектора: " << dVectorLength << ". \n\n\a";

	return 0;
}